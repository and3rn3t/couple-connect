  "shortcuts": [
    {
      "name": "Add New Action",
      "short_name": "New Action",
      "description": "Create a new action item",
      "url": "/?action=new",
      "icons": [
        {
          "src": "/icons/add-action-96x96.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "View Progress",
      "short_name": "Progress",
      "description": "Check your relationship progress",
      "url": "/?tab=progress",
      "icons": [
        {
          "src": "/icons/progress-96x96.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Issues Map",
      "short_name": "Issues",
      "description": "View your relationship issues map",
      "url": "/?tab=mindmap",
      "icons": [
        {
          "src": "/icons/issues-96x96.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  "screenshots": [
    {
      "src": "/screenshots/desktop-home.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Desktop view of the relationship dashboard"
    },
    {
      "src": "/screenshots/mobile-home.png",
      "sizes": "390x844",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Mobile view of the relationship dashboard"
    },
    {
      "src": "/screenshots/mobile-actions.png",
      "sizes": "390x844",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Mobile action dashboard with iOS-optimized interface"
    }
  ],
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "edge_side_panel": {
    "preferred_width": 400
  },
  "handle_links": "preferred",
  "protocol_handlers": [
    {
      "protocol": "web+couple",
      "url": "/?share=%s"
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  }
}
